<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/border_ongoing"
    android:layout_marginVertical="10dp"
    android:gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:layout_width="110dp"
            android:layout_height="110dp"
            app:cardCornerRadius="10dp">
            <ImageView
                android:id="@+id/hotel_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>
        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110sp"
            android:layout_marginStart="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/hotel_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000" />

            <TextView
                android:id="@+id/hotel_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginVertical="10sp"
                android:textSize="14sp"
                android:textColor="#666" />

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Completed"
                android:paddingVertical="5dp"
                android:paddingHorizontal="20dp"
                android:textStyle="bold"
                android:textColor="#4C4DDC"
                android:textSize="14sp"
                android:background="@drawable/bgr_paid_ongoing" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="10dp"
        android:background="#808080"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp"
        android:layout_margin="10dp"
        android:background="@drawable/bgr_edt_complete"
        >
        <ImageView
            android:id="@+id/btn_cmt"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_complete01"
            android:layout_marginHorizontal="5dp"/>
        <EditText
            android:id="@+id/ed_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="You have completed it!        |       Click to comment"
            android:padding="5dp"
            android:inputType="textCapSentences"
            android:textColor="#4C4DDC"
            android:textColorHint="#4C4DDC"
            android:background="@null"
            android:textSize="12dp"/>
    </LinearLayout>

</LinearLayout>