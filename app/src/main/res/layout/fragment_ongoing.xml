<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Screen_user.Booking.Ongoing"
    android:padding="8dp">

    <!-- ScrollView for smooth scrolling -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <!-- Main container for all booking items -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- Booking Item 1 -->
            <LinearLayout
                android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/hotel_image"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/hotel_popular_image"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="8dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/hotel_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Royale President Hotel"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#000" />

                    <TextView
                        android:id="@+id/hotel_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Viet Nam, Ha Noi"
                        android:textSize="14sp"
                        android:textColor="#666" />

                    <TextView
                        android:id="@+id/status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Paid"
                        android:padding="4dp"
                        android:textColor="#FFFFFF"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingTop="8dp">

                <Button
                    android:id="@+id/btn_cancel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Cancel Booking"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="@color/purple_500" />

                <Button
                    android:id="@+id/btn_view_ticket"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="View Ticket"
                    android:textColor="#FFFFFF"
                    android:layout_marginStart="8dp"
                    android:backgroundTint="@color/purple_500" />
            </LinearLayout>

            <!-- Booking Item 2 -->
            <LinearLayout
                android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
