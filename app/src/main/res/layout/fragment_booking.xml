<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="20dp"
    android:background="#ffffff"
    tools:context=".Screen_user.Fragment_booking">

    <TextView
        android:id="@+id/textBooking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Booking"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#101010" />
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayoutBooking"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/white"
        app:tabSelectedTextColor="#ffffff"
        app:tabBackground="@drawable/custom_tab_booking_selecter"
        app:tabIndicator="@drawable/custom_tab_booking"
        app:tabTextColor="#4C4DDC"
        android:layout_marginTop="10dp">
        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabOngoing"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Ongoing" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabComplete"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Complete" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabCancel"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Cancel" />
    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/pagerMain2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
