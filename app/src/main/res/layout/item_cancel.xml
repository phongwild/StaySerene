<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/border_ongoing"
    android:layout_marginVertical="10dp"
    android:gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/hotel_image"
            android:layout_width="110sp"
            android:layout_height="110sp"
            android:src="@drawable/hotel_popular_image"
            android:scaleType="centerCrop"
            android:layout_marginEnd="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110sp"
            android:layout_marginStart="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/hotel_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Royale President Hotel"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000" />

            <TextView
                android:id="@+id/hotel_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Viet Nam, Ha Noi"
                android:layout_marginVertical="15sp"
                android:textSize="14sp"
                android:textColor="#666" />

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:paddingVertical="5dp"
                android:paddingHorizontal="20dp"
                android:textStyle="bold"
                android:textColor="#E5615B"
                android:textSize="14sp"
                android:background="@drawable/bgr_edt_cancel" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="10dp"
        android:background="#808080"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp"
        android:layout_margin="10dp"
        android:background="@drawable/bgr_edt_cancel"
        >
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_cancel01"
            android:layout_marginHorizontal="5dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="You canceled this hotel booking"
            android:padding="5dp"
            android:textColor="#E5615B"
            android:textSize="12dp"/>
    </LinearLayout>



</LinearLayout>