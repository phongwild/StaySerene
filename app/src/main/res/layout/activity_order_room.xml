<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#FFFFFF"
    tools:context=".Screen_user.Activity.OrderRoom.Activity_order_room">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="12dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="16dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/btn_back_order_room"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_back" />
            </LinearLayout>

            <TextView
                android:id="@+id/headerText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Payment"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scrollbars="none"
            android:fadeScrollbars="true"
            android:layout_marginBottom="180dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent"
                    android:background="@drawable/custom_input"
                    android:padding="12dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="10dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:layout_height="wrap_content"
                            android:text="Hotel name"
                            android:textColor="#838383"
                            android:textSize="16sp"/>
                        <TextView
                            android:id="@+id/tv_hotelName_order_room"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:gravity="end"
                            android:layout_height="wrap_content"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:textSize="16sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="10dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:layout_height="wrap_content"
                            android:text="Type room"
                            android:textColor="#838383"
                            android:textSize="16sp"/>
                        <TextView
                            android:id="@+id/tv_name_type_room_order_room"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:layout_height="wrap_content"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:textSize="16sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="10dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:layout_height="wrap_content"
                            android:text="Room"
                            android:textColor="#838383"
                            android:textSize="16sp"/>
                        <TextView
                            android:id="@+id/tv_number_room_order_room"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:layout_height="wrap_content"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:textSize="16sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="10dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:layout_height="wrap_content"
                            android:text="Floor"
                            android:textColor="#838383"
                            android:textSize="16sp"/>
                        <TextView
                            android:id="@+id/tv_floor_order_room"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:layout_height="wrap_content"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:textSize="16sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="10dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:layout_height="wrap_content"
                            android:text="Description"
                            android:textColor="#838383"
                            android:textSize="16sp"/>
                        <TextView
                            android:id="@+id/tv_desc_order_room"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:gravity="end"
                            android:layout_height="wrap_content"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:textSize="16sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:orientation="horizontal"
                        android:background="#838383"
                        android:layout_marginBottom="10dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="10dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:layout_height="wrap_content"
                            android:text="Full name"
                            android:textColor="#838383"
                            android:textSize="16sp"/>
                        <TextView
                            android:id="@+id/tv_full_name_order_room"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:layout_height="wrap_content"
                            android:textColor="#4C4DDC"
                            android:textStyle="bold"
                            android:textSize="16sp"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tv_id_service"
                        android:layout_width="wrap_content"
                        android:layout_height="0px"
                        />
                    <TextView
                        android:id="@+id/tv_price_service"
                        android:layout_width="wrap_content"
                        android:layout_height="0px"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="10dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:layout_height="wrap_content"
                            android:text="Phone number"
                            android:textColor="#838383"
                            android:textSize="16sp"/>
                        <TextView
                            android:id="@+id/tv_phone_number_order_room"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:layout_height="wrap_content"
                            android:textColor="#4C4DDC"
                            android:textStyle="bold"
                            android:textSize="16sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:orientation="horizontal"
                        android:background="#838383"
                        android:layout_marginBottom="10dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="10dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="4"
                            android:gravity="start"
                            android:layout_height="wrap_content"
                            android:text="Time check in"
                            android:textColor="#838383"
                            android:textSize="16sp"/>
                        <RelativeLayout
                            android:id="@+id/btn_time_check_in_order_room"
                            android:layout_width="0dp"
                            android:layout_weight="5"
                            android:layout_height="wrap_content">
                            <RelativeLayout
                                android:layout_alignParentRight="true"
                                android:background="@drawable/custom_input"
                                android:layout_width="200dp"
                                android:layout_height="30dp"
                                android:paddingHorizontal="5dp">
                                <TextView
                                    android:id="@+id/tv_time_check_in_order_room"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textAlignment="center"
                                    android:layout_centerInParent="true"
                                    android:text="HH:mm:ss - dd/MM/yyyy"
                                    android:textColor="#838383"
                                    android:textSize="16sp"/>
                            </RelativeLayout>
                        </RelativeLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="10dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="4"
                            android:gravity="start"
                            android:layout_height="wrap_content"
                            android:text="Time check out"
                            android:textColor="#838383"
                            android:textSize="16sp"/>
                        <RelativeLayout
                            android:id="@+id/btn_time_check_out_order_room"
                            android:layout_width="0dp"
                            android:layout_weight="5"
                            android:layout_height="wrap_content">
                            <RelativeLayout
                                android:layout_alignParentRight="true"
                                android:background="@drawable/custom_input"
                                android:layout_width="200dp"
                                android:layout_height="30dp">
                                <TextView
                                    android:id="@+id/tv_time_check_out_order_room"
                                    android:layout_width="match_parent"
                                    android:textAlignment="center"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:text="HH:mm:ss - dd/MM/yyyy"
                                    android:textColor="#838383"
                                    android:textSize="16sp"/>
                            </RelativeLayout>
                        </RelativeLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:gravity="start"
                            android:layout_height="wrap_content"
                            android:text="Note"
                            android:textColor="#838383"
                            android:textSize="16sp"
                            android:layout_marginBottom="5dp"/>
                        <EditText
                            android:id="@+id/ed_note_order_room"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textMultiLine"
                            android:textSize="16sp"
                            android:textColor="#000000"
                            android:backgroundTint="#838383"
                            android:hint="Write something..."/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="10dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:layout_height="wrap_content"
                            android:text="Service"
                            android:textColor="#838383"
                            android:textSize="16sp"/>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:orientation="horizontal"
                            android:gravity="end">
                            <TextView
                                android:id="@+id/tv_service_order_room"
                                android:layout_width="wrap_content"
                                android:gravity="center_vertical"
                                android:textAlignment="textEnd"
                                android:layout_gravity="end"
                                android:layout_height="wrap_content"
                                android:text="Choose service"
                                android:textColor="#0F0F10"
                                android:textStyle="bold"
                                android:textSize="16sp"
                                android:paddingRight="10dp"
                                tools:ignore="RtlCompat"/>
                            <ImageView
                                android:id="@+id/img_choose_service_order_room"
                                android:layout_gravity="center_vertical"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_right_arrow"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        app:cardBackgroundColor="#ffffff"
        android:layout_height="140dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="12dp"
            android:background="@drawable/custom_border_top"
            android:paddingVertical="13dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:layout_height="wrap_content"
                        android:text="Total"
                        android:textColor="#000000"
                        android:textSize="16sp"/>
                    <TextView
                        android:id="@+id/tv_total_order_room"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:layout_height="wrap_content"
                        android:text="10.000Ä‘"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:textSize="20sp"/>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:gravity="end"
                    android:layout_height="wrap_content"
                    android:text="You need to pay 10% of the total."
                    android:textColor="#4C4DDC"
                    android:textSize="16sp"/>
            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:id="@+id/btn_booking_order_room"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                app:cardBackgroundColor="#4C4DDC"
                app:cardCornerRadius="12dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:text="Booking"
                        android:textColor="#ffffff"
                        android:textStyle="bold"
                        android:textSize="16sp"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>